<h1>Listing games</h1>

<br />

<%= link_to 'New Game', new_game_path, class: "btn btn-small" %>

<br />
<br />

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>City</th>
    <th>Stadium</th>
    <th>Group</th>
    <th>Team1</th>
    <th>Team2</th>
    <th>Actions</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.city %></td>
    <td><%= game.stadium %></td>
    <td><%= game.group %></td>
    <td><%= game.team1 %></td>
    <td><%= game.team2 %></td>
    <td><%= link_to 'Show', game, class: "btn btn-small" %>
        <%= link_to 'Edit', edit_game_path(game), class: "btn btn-small" %>
        <%= link_to 'Destroy', game, class: "btn btn-small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
