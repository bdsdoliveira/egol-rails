<h1>Listing games</h1>

<br />

<%= link_to 'New Game', new_game_path, class: "btn btn-small" %>

<br />
<br />

<table class="table table-striped table-bordered table-condensed" >
  <tr>
    <th>Date/Time</th>
    <th>Score1</th>
    <th>Score2</th>
    <th>City*</th>
    <th>Team1*</th>
    <th>Team2*</th>
    <th>Stage*</th>
    <th>Actions</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.date_and_time %></td>
    <td><%= game.score_team1 %></td>
    <td><%= game.score_team2 %></td>
    <td><%= game.city.city %></td>
    <td><%= game.team1.team %></td>
    <td><%= game.team2.team %></td>
    <td><%= game.stage.stage %></td>
    <td><%= link_to 'Show', game, class: "btn btn-small" %>
        <%= link_to 'Edit', edit_game_path(game), class: "btn btn-small" %>
        <%= link_to 'Destroy', game, class: "btn btn-small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
