<h1>Listing teams</h1>

<br />

<%= link_to 'New Team', new_team_path, class: "btn btn-small" %>

<br />
<br />

<table class="table table-striped table-bordered table-condensed" >
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Group</th>
    <th>Actions</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.code %></td>
    <td><%= team.group %></td>
    <td><%= link_to 'Show', team, class: "btn btn-small" %>
        <%= link_to 'Edit', edit_team_path(team), class: "btn btn-small" %>
        <%= link_to 'Destroy', team, method: :delete, class: "btn btn-small", data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
