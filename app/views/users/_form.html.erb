<%= form_for(@user) do |f| %>
  <%= f.text_field :name, :class => "input-xlarge", placeholder: "Name" %><br />
  <%= f.text_field :email, :class => "input-xlarge", placeholder: "Email" %><br />
  <%= f.password_field :password, :class => "input-xlarge", placeholder: "Password" %><br />
  <%= f.password_field :password_confirmation, :class => "input-xlarge", placeholder: "Confirm your password" %><br />
  <%= f.submit "Submit", class: "btn btn-warning" %>
<% end %>