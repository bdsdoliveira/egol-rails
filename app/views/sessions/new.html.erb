
<div class="box box-left well">
  <div class="box-content">
    <div class="title">New here?</div>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-warning" %>
  </div>
</div>

<div class="box box-right well">
  <div class="box-content">
    <div class="title">Sign in</div>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.text_field :email, class: "input-xlarge", placeholder: "Email" %><br />
      <%= f.password_field :password, class: "input-xlarge", placeholder: "Password" %><br />
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% if notice %>
    <div class="alert alert-error"><p><%= notice %></p></div>
  <% end %>
</div>
