<h1>Listing stages</h1>

<br />

<%= link_to 'New Stage', new_stage_path, class: "btn btn-small" %>

<br />
<br />

<table class="table table-striped table-bordered table-condensed" >
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th></th>
  </tr>

<% @stages.each do |stage| %>
  <tr>
    <td><%= stage.id %></td>
    <td><%= stage.name %></td>
    <td><%= link_to 'Show', stage, class: "btn btn-small" %>
        <%= link_to 'Edit', edit_stage_path(stage), class: "btn btn-small" %>
        <%= link_to 'Destroy', stage, method: :delete, class: "btn btn-small", data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
