<h1>Listing matches</h1>

<br />

<%= link_to 'New Match', new_match_path, class: "btn btn-small" %>

<br />
<br />

<table class="table table-striped table-bordered table-condensed" >
  <tr>
    <th>Date/Time</th>
    <th>Score1</th>
    <th>Score2</th>
    <th>City*</th>
    <th>Team1*</th>
    <th>Team2*</th>
    <th>Stage*</th>
    <th>Actions</th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.date_and_time %></td>
    <td><%= match.score_team1 %></td>
    <td><%= match.score_team2 %></td>
    <td><%= match.city.name %></td>
    <td><%= match.team1.name %></td>
    <td><%= match.team2.name %></td>
    <td><%= match.stage.name %></td>
    <td><%= link_to 'Show', match, class: "btn btn-small" %>
        <%= link_to 'Edit', edit_match_path(match), class: "btn btn-small" %>
        <%= link_to 'Destroy', match, class: "btn btn-small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
