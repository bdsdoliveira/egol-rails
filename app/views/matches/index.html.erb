<h1>Listing matches</h1>

<br />

<%= link_to 'New Match', new_match_path, class: "btn btn-small" %>

<br />
<br />

<table class="table table-striped table-bordered table-condensed" >
  <tr>
    <th>ID</th>
    <th>Date/Time</th>
    <th>Score_Team1</th>
    <th>Score_Team2</th>
    <th>City ID</th>
    <th>Team1 ID</th>
    <th>Team2 ID</th>
    <th>Stage ID</th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.id %></td>
    <td><%= match.date_and_time %></td>
    <td><%= match.score_team1 %></td>
    <td><%= match.score_team2 %></td>
    <td><%= match.city.id %> (<%= match.city.name %>)</td>
    <td><%= match.team1.id %> (<%= match.team1.code %>) <i><%= match.team1.name %></i></td>
    <td><%= match.team2.id %> (<%= match.team2.code %>) <i><%= match.team2.name %></i></td>
    <td><%= match.stage.id %> (<%= match.stage.name %>)</td>
    <td><%= link_to 'Show', match, class: "btn btn-small" %>
        <%= link_to 'Edit', edit_match_path(match), class: "btn btn-small" %>
        <%= link_to 'Destroy', match, class: "btn btn-small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
