  <div class="field">
    <%= f.label :team2 %>
    <%= f.collection_select :team2_id, Team.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :score_team1 %>
    <%= f.text_field :score_team1 %>
  </div>
  <div class="field">
    <%= f.label :score_team2 %>
    <%= f.text_field :score_team2 %>
  </div>
  <div class="field" >
    <%= f.label :stage %>
    <%= f.collection_select :stage_id, Stage.all, :id, :name %>
  </div>
